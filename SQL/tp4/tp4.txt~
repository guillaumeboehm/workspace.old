I.

1.
CREATE OR REPLACE VIEW circuit_pas_cher AS
SELECT NC, PRIX
FROM L2I_CIRCUIT
WHERE PRIX < 200;

2.
CREATE TABLE mon_circuit as select * from L2I_CIRCUIT;
CREATE OR REPLACE VIEW circuit_pas_cher AS
SELECT NC, PRIX
FROM mon_circuit
WHERE PRIX < 200;

3.
CREATE TABLE mon_circuit as select * from L2I_CIRCUIT;
CREATE OR REPLACE VIEW circuit_pas_cher AS
SELECT NC, PRIX
FROM mon_circuit
WHERE PRIX < 200
WITH CHECK OPTION;

4.
CREATE TABLE circuit_anglais_table AS SELECT * FROM L2I_CIRCUIT;

CREATE OR REPLACE VIEW circuit_anglais AS
SELECT DISTINCT NC
FROM circuit_anglais_table
WHERE NC IN (SELECT NOMV FROM L2I_VILLE
		WHERE UPPER(PAYS) = 'ANGLETERRE'));

II.

1.
GRANT SELECT ON mon_circuit TO flint;
GRANT SELECT ON circuit_pas_cher TO flint;

2.
select distinct table_name FROM all_tab_privs where grantee = 'FLINT';

3.
INSERT INTO circuit_pas_cher VALUES (11, 150);
commit;

